---
// Header component with navigation and mobile menu
import Logo from "./Logo.astro";
---

<header class="sticky top-0 z-50 bg-white border-b border-olive-drab shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <Logo class="h-8 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <ul class="flex space-x-8">
          <li>
            <a
              href="/"
              class:list={[
                "text-near-black hover:text-dark-olive transition-colors duration-200",
                { "text-dark-olive font-semibold": Astro.url.pathname === "/" }
              ]}
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/projects"
              class:list={[
                "text-near-black hover:text-dark-olive transition-colors duration-200",
                { "text-dark-olive font-semibold": Astro.url.pathname === "/projects" }
              ]}
            >
              Projects
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class:list={[
                "text-near-black hover:text-dark-olive transition-colors duration-200",
                { "text-dark-olive font-semibold": Astro.url.pathname === "/contact" }
              ]}
            >
              Contact
            </a>
          </li>
        </ul>
      </nav>

      <!-- Theme Toggle Slot -->
      <div class="flex items-center">
        <slot name="theme-toggle" />
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-near-black hover:text-dark-olive hover:bg-off-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-dark-olive"
        aria-expanded="false"
        aria-label="Open main menu"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-olive-drab">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a
        href="/"
        class:list={[
          "block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200",
          Astro.url.pathname === "/" ? "text-dark-olive bg-off-white" : "text-near-black hover:text-dark-olive hover:bg-off-white"
        ]}
      >
        Home
      </a>
      <a
        href="/projects"
        class:list={[
          "block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200",
          Astro.url.pathname === "/projects" ? "text-dark-olive bg-off-white" : "text-near-black hover:text-dark-olive hover:bg-off-white"
        ]}
      >
        Projects
      </a>
      <a
        href="/contact"
        class:list={[
          "block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200",
          Astro.url.pathname === "/contact" ? "text-dark-olive bg-off-white" : "text-near-black hover:text-dark-olive hover:bg-off-white"
        ]}
      >
        Contact
      </a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  if (button && menu) {
    button.addEventListener('click', () => {
      const isExpanded = button.getAttribute('aria-expanded') === 'true';
      button.setAttribute('aria-expanded', (!isExpanded).toString());
      button.setAttribute('aria-label', isExpanded ? 'Open main menu' : 'Close main menu');

      // Toggle hamburger/close icon
      const svg = button.querySelector('svg');
      if (svg) {
        svg.innerHTML = isExpanded
          ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />'
          : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
      }

      menu.classList.toggle('hidden');
    });
  }
</script>